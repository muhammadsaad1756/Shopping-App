@model ShoppingApp.Models.Users

@{
    ViewBag.Title = "Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h3 class="card-title text-center text-primary mb-4">Register</h3>

                    <!-- User Registration Form -->
                    <form asp-action="Register" method="post" enctype="multipart/form-data">
                        <!-- Name field -->
                        <div class="form-group mb-3">
                            <label for="Name" class="form-label">Full Name</label>
                            <input type="text" class="form-control" id="Name" name="Name" required>
                        </div>

                        <!-- Age field -->
                        <div class="form-group mb-3">
                            <label for="Age" class="form-label">Age</label>
                            <input type="number" class="form-control" id="Age" name="Age" required>
                        </div>

                        <!-- Role field -->
                        <div class="form-group mb-3">
                            <label for="Role" class="form-label">Role</label>
                            <select class="form-control" id="Role" name="Role" required>
                                <option value="Seller">Seller</option>
                                <option value="Buyer">Buyer</option>
                            </select>
                        </div>

                        <!-- Profile Picture field -->
                        <div class="form-group mb-3">
                            <label for="ProfilePictureUrl" class="form-label">Profile Picture</label>
                            <input type="file" class="form-control" id="ProfilePictureUrl" name="ProfilePictureUrl" accept="image/*">
                        </div>

                        <!-- Username field -->
                        <div class="form-group mb-3">
                            <label for="UserName" class="form-label">Username</label>
                            <input type="text" class="form-control" id="UserName" name="UserName" required>
                        </div>

                        <!-- Password field -->
                        <div class="form-group mb-3">
                            <label for="Password">Password</label>
                            <input type="password" class="form-control" id="Password" name="PasswordHash" required>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-primary w-100">Register</button>
                    </form>

                    <!-- Message for existing users -->
                    <div class="text-center mt-3">
                        <p>Already have an account? <a href="/Account/Login">Login here</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
