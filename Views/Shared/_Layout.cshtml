<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - ShoppingApp</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+PvQQdEzTT9qV1CB2n5go1vNkt5md" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="/">ShoppingApp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @if (ViewBag.IsLoggedIn == true)
                    {
                        <!-- Display user info and Logout link -->
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/UserDetails">
                                <img src="@ViewBag.ProfilePictureUrl" class="rounded-circle" alt="User Image" width="40" height="40">
                                @ViewBag.UserName
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Logout">Logout</a>
                        </li>

                        <!-- Conditional navigation based on user role -->
                        @if (ViewBag.UserRole == "Seller")
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/SellersPage/UserHomePage">My Items</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/SellersPage/AddEditItem">Add New Item</a>
                            </li>
                        }
                        else if (ViewBag.UserRole == "Buyer")
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Buyer/AllItemsReport">All Items</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Buyer/ShoppingCart">Shopping Cart</a>
                            </li>
                        }
                    }
                    else
                    {
                        <!-- Display Login link if user is not logged in -->
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Register">Register</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </header>

    <div class="container mt-5">
        @RenderBody()
    </div>

    <footer class="footer bg-light text-center py-3 mt-5">
        <div class="container">
            <p>&copy; @DateTime.Now.Year - ShoppingApp. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
