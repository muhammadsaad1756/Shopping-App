@model IEnumerable<ShoppingApp.Models.Item>
@* @moel ShoppingApp.Models.Buyers *@

<div class="container mt-5">
    <h2 class="mb-4">Items For Sale</h2>

    <!-- Table of Items for Sale -->
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Item Name</th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            if(@if (Model != null){
            @foreach (var items in Model)
            {
                <tr>
                    <td>@items.Name</td>
                    <td>@items.Price.ToString("C")</td>
                    <td>@items.QuantityAvailable</td>
                    <td>
                        <a href="@Url.Action("EditItem", new { id = items.Id })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("DeleteItem", new { id = items.Id })" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
            }
        </tbody>
    </table>

    <a href="@Url.Action("AddEditItem")" class="btn btn-success btn-lg mt-3">Add New Item</a>

    <hr class="mt-5" />

    <h2 class="mb-4">Report of Users Who Bought From You</h2>
