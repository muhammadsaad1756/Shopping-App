@model ShoppingApp.Models.Item

<h2>@(Model.Id == 0 ? "Add New Item" : "Edit Item")</h2>

<form asp-action="SaveItem" asp-controller="SellersPage" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="3" required></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" required />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="QuantityAvailable"></label>
        <input asp-for="QuantityAvailable" class="form-control" type="number" required />
        <span asp-validation-for="QuantityAvailable" class="text-danger"></span>
    </div>

    <!-- Hidden field for the item ID -->
    <input type="hidden" asp-for="Id" />

    <!-- Hidden field for the seller ID (this value should be assigned in the controller) -->
    <input type="hidden" asp-for="SellerId" />

    <button type="submit" class="btn btn-primary">
        @if (Model.Id == 0)
        {
            <text>Add Item</text>
        }
        else
        {
            <text>Save Changes</text>
        }
    </button>
    <a href="@Url.Action("UserHomePage")" class="btn btn-secondary">Cancel</a>
</form>
